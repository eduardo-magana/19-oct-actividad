int x1;//Declarar una variable
int y1;
int x2;
int y2;
int x3;
int y3;
int x4;
int y4;

void setup(){
	size(500,500);//Una vez
x1 = 100;
y1 = 100;
	x2 = 400;
	y2 = 100;
	x3 = 100;
	y3 = 400;
	x4 = 400;
	y4 = 400;
}
void draw(){
	background(255);
ellipse(x1,y1,150,150);
	x1++;
	y1++;
ellipse(x2,y2,150,150);
	x2--;
	y2++;
ellipse(x3,y3,150,150);
	x3++;
	y3--;
ellipse(x4,y4,150,150);
	x4--;
	y4--;
}
